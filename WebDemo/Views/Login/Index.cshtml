
@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.Title</h2>

<form action="/Login/CheckLogin" method="post" class="login_form">
    <input type="text" class="form_input" placeholder="Username" name="username"/>
    <input type="password" class="form_input" placeholder="Password" name="password"/>
    <input type="submit" class="login_btn"/>
</form>

<style>
    .login_form {
        width: 400px;
        height: 200px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translateX(-50%) translateY(-50%);
        display: flex;
        flex-direction: column;
    }
    .form_input{
        width: 380px;
        height: 40px;
        margin: 10px auto;
        position: relative;
    }
    .login_btn {
        margin: 10px auto;
        width: 100px;
        height: 40px;
    }
</style>
